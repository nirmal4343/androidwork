<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/wallet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/money_wallet_icon"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="Add Fund"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/store"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/store_digit"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="Current Balance"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/location"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="Card Info"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/support"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_support"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="Card Info"
        android:textColor="#FFFFFF" />

</LinearLayout>